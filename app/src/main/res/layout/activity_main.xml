<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout_main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_frame_main_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Layout of buttons should be improved a lot!!!!!-->
        <RelativeLayout
            android:layout_width="240sp"
            android:layout_height="360sp"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_review_mainactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/btn_review_mainactivity_text" />

            <Button
                android:id="@+id/btn_test_mainactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_review_mainactivity"
                android:layout_centerHorizontal="true"
                android:text="@string/btn_test_mainactivity_text" />

            <Button
                android:id="@+id/btn_start_mainactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_test_mainactivity"
                android:layout_centerHorizontal="true"
                android:text="@string/btn_start_mainactivity_text" />


            <Button
                android:id="@+id/btn_score_mainactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_review_mainactivity"
                android:layout_centerHorizontal="true"
                android:text="@string/btn_score_mainactivity_text" />

            <Button
                android:id="@+id/btn_exit_mainactivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_score_mainactivity"
                android:layout_centerHorizontal="true"
                android:text="@string/btn_exit_mainactivity_text" />

        </RelativeLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/left_drawer_main_activity"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#000"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"></ListView>

</android.support.v4.widget.DrawerLayout>
